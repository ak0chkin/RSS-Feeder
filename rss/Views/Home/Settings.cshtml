@model SettingsViewModel
@{
    ViewData["Title"] = "Настройки";
}

@using (Html.BeginForm("Settings", "Home", FormMethod.Post))
{
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="UpdateFrequency" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UpdateFrequency" class="form-control" value="@Model.UpdateFrequency" />
            <span asp-validation-for="UpdateFrequency" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Urls" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Urls" class="form-control" value="@Model.Urls" />
            <span asp-validation-for="Urls" class="text-danger"></span>
            <span class="aside">
                <em>Используйте <b>;</b> , чтобы разделить несколько</em>
            </span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
}
@section Scripts {
    <script>
    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}